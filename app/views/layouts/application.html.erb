<!DOCTYPE html>
<html>
<head>
  <title>Ecommerce</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
  <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' %>
  <link href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" rel="stylesheet">
  <%= csrf_meta_tags %>


<nav class="menu">
  <h1 class="name"><i class="fi-widget"></i> Mom and Pop Electronics</a></h1>
    <ul class="inline-list">
      <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <% @categories.each do |cat| %>
                <li><%= link_to cat.name, categorical_path(cat_id: cat.id) %></li>
              <% end %>
            </ul>
        </li>
      <li class ="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Brands <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% @brands.each do |brand| %>
              <li><%= link_to brand, branding_path(brand: brand) %></li>
            <% end %>
           </ul>
        </li>
        
        <% if signed_in? && current_user.role == "admin" %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Categories", categorical_url%></li>
              <li><%= link_to "Products", categorical_url%></li>
            </ul>
        </li>
         <% end %>
       


      </li>
      </li>


    <!-- <li><a href="#">Home</a></li>
    <li class="active"><a href="#">Blog</a></li>
    <li><a href="#">Pricing</a></li> -->
  </ul>

  <ul class="inline-list hide-for-small-only account-action">
     <li>
              <% if user_signed_in? %>
              <li><a href="line_items#show" id="cart"><i class="fa fa-shopping-cart"></i> Cart <span class="badge"></span></a></li>
           

              <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
              <% else %>
                <%= link_to "Sign In", user_session_path %>
              <% end %>
            </li>
            <li>
              <%= link_to "Sign Up", new_user_registration_path %>
            </li>
</nav>
<%= yield %>

</body>
</html>